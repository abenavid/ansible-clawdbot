FROM node:22-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    gnupg \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install pnpm
RUN npm install -g pnpm

# Clone Clawdbot from GitHub
WORKDIR /app
RUN git clone https://github.com/clawdbot/clawdbot.git . && \
    pnpm install && \
    pnpm build

# Create user and directories
RUN useradd -m -s /bin/bash clawdbot && \
    mkdir -p /home/clawdbot/.clawdbot/sessions /home/clawdbot/.clawdbot/credentials && \
    chown -R clawdbot:clawdbot /home/clawdbot/.clawdbot /app

# Switch to clawdbot user
USER clawdbot
WORKDIR /app

# Expose default port (only accessible via localhost binding)
EXPOSE {{ clawdbot_port }}

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD test -f /app/package.json || exit 1

# Run Clawdbot
CMD ["node", "dist/index.js"]
